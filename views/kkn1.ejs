    if (closeBtn && frameChat) {
      closeBtn.addEventListener("click", function () {
        console.log("Tombol X diklik");
        frameChat.style.display = "none";
      });
    }
  });

  document.addEventListener("DOMContentLoaded", function() {
    const menuFrame = document.querySelector(".menuframe");
    const framePalingAtas = document.querySelector(".framepalingatas");
    const backButton = document.querySelector(".bc-2-pwbackicoon");

    // Tampilkan frame ketika menu diklik
    menuFrame.addEventListener("click", function() {
      framePalingAtas.style.display = "block";
    });

    // Sembunyikan frame ketika tombol kembali diklik
    backButton.addEventListener("click", function() {
      framePalingAtas.style.display = "none";
    });
  });
  // fungsi ai
  async function handleSubmit() {
    const inputText = document.getElementById("userInput").value;

    if (inputText !== "") {
      // Tampilkan input langsung di UI
      document.getElementById("inputResult").textContent = inputText;
      document.querySelector(".backinputai").style.display = "block";

      try {
        const response = await fetch("/process", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ topic: inputText }),
        });

        const data = await response.json();
        document.getElementById("outputResult").textContent = data.output;
        document.querySelector(".backoutputai").style.display = "block";
      } catch (error) {
        document.getElementById("outputResult").textContent = "Terjadi kesalahan saat memproses.";
        document.querySelector(".backoutputai").style.display = "block";
        console.error("Error:", error);
      }
    }
  }
      const chatBox = document.getElementById('chatBox');
    const chatInput = document.getElementById('userInput');

    function appendMessage(text, sender) {
      const bubble = document.createElement('div');
      bubble.classList.add('chat-bubble', sender === 'user' ? 'from-user' : 'from-bot');
      bubble.textContent = text;
      chatBox.appendChild(bubble);
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    async function handleSubmit() {
      const text = chatInput.value.trim();
      if (text === '') return;

      appendMessage(text, 'user');
      chatInput.value = '';

      try {
        const response = await fetch("/process", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ topic: text }),
        });

        const data = await response.json();
        appendMessage(data.output || "Bot tidak memberikan respons.", 'bot');
      } catch (error) {
        appendMessage("Terjadi kesalahan saat menghubungi server.", 'bot');
        console.error("Fetch error:", error);
      }
    }

    chatInput.addEventListener('keydown', function (e) {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        handleSubmit();
      }
    });

    document.getElementById('closeChatButton').addEventListener('click', () => {
      document.querySelector('.framechatai').style.display = 'none';
    });
</script>
